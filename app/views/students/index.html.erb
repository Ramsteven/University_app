<div class="row">
    <div class="col s12">
      <h3 class="center-align">Students Directory</h3>
    </div>
  </div>
  <div class="row">
    <% @students.each do |students| %>    
      <div class="col s6 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= students.name %> </span>
            <p><%= students.email %> </p>
            <p>Course Enrollments: None</p>
          </div>
          <div class="card-action">
            <%= link_to "View Profile", student_path(students)%>
          </div>
        </div>
      </div>
  <% end %>
</div> 
